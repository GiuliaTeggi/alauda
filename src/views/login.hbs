<section class="login">
  <form class="form__login" action="/login" method="post" novalidate>
    <label for="login__username">Username</label>
    <input id="login__username" name="loginusername" type="text" class="login__username" required> 
    {{#if err}}
    <p>{{err}}</p>
    {{/if}}
    <p id="username-err" class="error"></p>
    <label for="login__password">Password</label>
    <input id="login__password" name="loginpassword" type="login__password" class="login__password" required>
    <p id="login__password-err"class="error"></p>
    {{#if errorMessage}}
    <p>{{errorMessage}}</p>
    {{/if}}
    <input type="submit" value="login"></input>

  </form>
</section>